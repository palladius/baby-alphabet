<%
  filename = precipuous_photo_paths.sample

  paz = filename 
  obj = AlphabetPicture.new(paz)
  full_paz = obj.full_path
  parola = obj.basename
  visualization_options = predilige.to_s
  buridone_opts = {:predilige => predilige, :letter => letter , :filename => filename, :full_paz => full_paz, :size => size, :parola => parola, :obj => obj }

  standard_modules = %w{ modulericc2 modulericc fittingsquares }
 
if %w{portrait landscape}.include? visualization_options%>
  <%= render partial: "articles/single_square_experiments/portrait_or_landscape", :locals => buridone_opts.merge(:verticality => visualization_options) %>
<% elsif visualization_options == "modulericc2" %>
  <%= render partial: "articles/single_square_experiments/modulericc2", :locals => buridone_opts %>
<% elsif visualization_options == "modulericc" %>
  <%= render partial: "articles/single_square_experiments/modulericc", :locals => buridone_opts %>
<% elsif visualization_options == "fittingsquares" %>
  <%= render partial: "articles/single_square_experiments/fittingsquares", :locals => buridone_opts %>
<% else %>
  <%= render partial: "articles/single_square_experiments/default", :locals => buridone_opts %>
<% end %>
