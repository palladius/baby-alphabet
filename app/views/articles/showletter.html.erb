<%
  #alphabet_photo_paths_beginning_with_letter = @alphabet_photo_paths.select{|paz| paz.starts_with?(@letter.downcase) }
  alphabet_photo_paths_beginning_with_letter = AlphabetPicture.findall_by_initial @letter rescue []

%>
<h2>List of stuff</h2>

  <p>List of <b><%= alphabet_photo_paths_beginning_with_letter.count %></b> people
  
  
<table border="1" >

  <% alphabet_photo_paths_beginning_with_letter.each do |paz| 
     obj = AlphabetPicture.new(paz)
  
  %>
    <tr>
      <td class="foto-path" > <%= paz %>
      <td class="foto-size" > <%= obj.size %>
      <td class="foto-verticality" > <%= obj.verticality %>
      <td class="foto-it" > <%= obj.word_in_primary_language %>
      <td class="foto-uk" > <%= obj.word_in_secondary_language %>
      <td class="foto-string" > <%#= obj.to_s %>
      

  <% end %>
</table>



<h2>Iterating ugly on Modulericc2</h2>

  (tant par fer quelcousa)

  <div style="height:60rem; width:100%; margin: auto;">
  <% alphabet_photo_paths_beginning_with_letter.each do |paz| %>
    <div style=" width:33%; height:320px; margin-left:0%; margin-right:0%; float:left; background-color: white;">
      <%= render partial: "articles/foto_quadretto/modulericc2", :locals => { :obj => AlphabetPicture.new(paz), :letter => @letter }  %>
    </div>
  <% end %>
</div>



